
@{
    ViewBag.Title = "Cargotracking";
}

<div class="separator"></div>

<div class="container">
    <div class="d-flex justify-content-center ">
        <div class="user_card ">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="~/src/assets/logo.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-truck"></i></span>
                        </div>
                        <input type="text" name="" class="form-control input_user" value="" placeholder="Takip No">
                    </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="button" name="button" class="btn login_btn">Kargo Takip</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



