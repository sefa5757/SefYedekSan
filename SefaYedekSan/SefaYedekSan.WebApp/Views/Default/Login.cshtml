
@{
    ViewBag.Title = "Login";
}

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/src/styles/login.css" rel="stylesheet" />

<div class="container">
    <div class="d-flex justify-content-center ">
        <div class="user_card ">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="/src/assets/logo.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" name="" class="form-control input_user" value=""
                               placeholder="kullanıcı adı">
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" name="" class="form-control input_pass" value=""
                               placeholder="parola">
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customControlInline">
                            <label class="custom-control-label" for="customControlInline">Beni Hatırla</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="button" name="button" class="btn login_btn">Giriş</button>
                    </div>
                </form>
            </div>

            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Kayıt olmak ister misiniz? <a href="@Url.Action("Register")" class="ml-2">Kayıt Ol</a>
                </div>
                <div class="d-flex justify-content-center links">
                    <a href="#">Parolanızı mı unuttunuz?</a>
                </div>
            </div>
        </div>
    </div>
</div>
